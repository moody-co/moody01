generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  createdAt DateTime @default(now())

  checkins  Checkin[]
  reviews   Review[]
  tickets   Ticket[]
}

model Venue {
  id          String   @id @default(cuid())
  name        String
  subtitle    String?
  address     String?
  heroUrl     String?
  createdAt   DateTime @default(now())

  events      Event[]
  reviews     Review[]
}

model Event {
  id        String   @id @default(cuid())
  title     String
  venueId   String
  startsAt  DateTime?
  coverUrl  String?
  createdAt DateTime @default(now())

  venue     Venue    @relation(fields: [venueId], references: [id])
  checkins  Checkin[]
  reviews   Review[]
  tickets   Ticket[]
}

model Checkin {
  id         String   @id @default(cuid())
  userId     String
  eventId    String
  verifiedAt DateTime @default(now())
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  event      Event    @relation(fields: [eventId], references: [id])

  @@index([userId, eventId])
}

model Review {
  id         String   @id @default(cuid())
  userId     String
  eventId    String
  venueId    String

  crowded    String
  vibe       String
  promoActive Boolean
  worthIt    Boolean

  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  event      Event    @relation(fields: [eventId], references: [id])
  venue      Venue    @relation(fields: [venueId], references: [id])

  @@index([venueId, createdAt])
  @@index([eventId, createdAt])
}

model Ticket {
  id         String   @id @default(cuid())
  userId     String
  eventId    String

  status     String   @default("ACTIVE")
  badge      String?
  qrCode     String   @unique

  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  event      Event    @relation(fields: [eventId], references: [id])
}

model Payment {
  id              String   @id @default(cuid())
  userId          String
  eventId         String
  amountCents     Int
  currency        String   @default("brl")
  status          String   @default("PENDING") // PENDING | PAID | FAILED
  stripeSessionId String?  @unique
  stripeEventId   String?  @unique
  createdAt       DateTime @default(now())

  user            User     @relation(fields: [userId], references: [id])
  event           Event    @relation(fields: [eventId], references: [id])

  @@index([userId, createdAt])
  @@index([eventId, createdAt])
}
