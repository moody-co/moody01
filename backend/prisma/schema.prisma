generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum VenueCategory {
  CLUB
  BAR
  RESTAURANT
  LOUNGE
  OTHER
}

enum TicketStatus {
  ACTIVE
  CONFIRMED
  CANCELLED
  USED
}

enum Crowded {
  EMPTY
  MEDIUM
  FULL
}

enum Vibe {
  LOW
  OK
  LIVELY
}

enum YesNo {
  YES
  NO
}

model User {
  id          String   @id @default(cuid())
  email       String?  @unique
  username    String?  @unique
  name        String
  avatarUrl   String?
  bio         String?
  city        String?
  state       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  checkins    Checkin[]
  reviews     Review[]
  tickets     Ticket[]
  presences   PresenceVerification[]
  payments    Payment[]
}

model Venue {
  id            String        @id @default(cuid())
  name          String
  subtitle      String?
  category      VenueCategory @default(OTHER)

  addressLine   String?
  city          String?
  state         String?
  country       String?       @default("BR")

  // geolocalização simples (depois dá pra evoluir)
  lat           Decimal?      @db.Decimal(10, 7)
  lng           Decimal?      @db.Decimal(10, 7)

  heroImageUrl  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  events        Event[]
  checkins      Checkin[]
  reviews       Review[]
}

model Event {
  id           String   @id @default(cuid())
  venueId      String
  title        String
  city         String?
  area         String?
  imageUrl     String?

  // promo (opcional)
  promoTitle   String?
  promoText    String?

  startsAt     DateTime?
  endsAt       DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  venue        Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  checkins     Checkin[]
  tickets      Ticket[]
  presences    PresenceVerification[]
}

model PresenceVerification {
  id         String   @id @default(cuid())
  userId     String
  eventId    String

  verifiedAt DateTime @default(now())

  // ✅ deixa explícito o unlock de 30 min
  unlockAt   DateTime

  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId, verifiedAt])
}

model Checkin {
  id          String   @id @default(cuid())
  userId      String
  venueId     String
  eventId     String?

  crowded     Crowded
  vibe        Vibe
  promoActive YesNo
  worthIt     YesNo

  // foto validação (como você faz na câmera)
  photoUrl    String?

  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue       Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)
  event       Event?   @relation(fields: [eventId], references: [id], onDelete: SetNull)

  @@index([venueId, createdAt])
  @@index([eventId, createdAt])
  @@index([userId, createdAt])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  venueId   String

  rating    Int?     // 1..5 opcional (se quiser)
  content   String

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  venue     Venue    @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@index([venueId, createdAt])
}

model Ticket {
  id          String       @id @default(cuid())
  userId      String
  eventId     String

  status      TicketStatus @default(ACTIVE)
  code        String       @unique // ex: "NEON-248-XJ9"
  qrPayload   String       // valor usado pra gerar o QR

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  event       Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model Payment {
  id            String   @id @default(cuid())
  userId        String

  // prepara para Stripe
  provider      String   @default("stripe")
  status        String   // created, pending, paid, failed, refunded...
  amountCents   Int
  currency      String   @default("BRL")

  // ids externos (stripe)
  providerRef   String?  @unique

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}
